<%- include('../homeIncludes/header.ejs') %>
    <section id="authentication">
        <div id="authenticationImage">
            <div>
                <img src="/img/streetFood2.png" alt="">
                <h1 class="heading alignCenter"
                    style="font-size: 40px; letter-spacing: 2px; color: rgb(198, 101, 11); font-weight: 500;">Taste On
                    Wheels</h1>
            </div>
        </div>
        <div id="authenticationForm">
            <div class="authHeader">
                <ul class="">
                    <li><a href="/">Home</a></li>
                </ul>
                <ul class="navBtns">
                    <li><a class="btnOrange" href="/login">Login</a></li>
                </ul>
            </div>
            <br>
            <section class="formHeader">
                <div>
                    <div style="text-align: center;">
                        <img style="text-align: center;" src="/img/logo.png" alt="">
                    </div>
                    <h1 class="alignCenter heading " style=" padding:10px 0">Create TOW Account</h1>
                     <!-- <h1 class="error">Incorrect Email</h1> -->
                    <form action="" id="authForm">
                        <label for="firstName">First Name</label>
                        <input type="text" placeholder="John">
                     
                        <label for="lastName">Last Name</label>
                        <input type="text" placeholder="Doe">
                        
                        <label for="Email">Email</label>
                        <input type="text" placeholder="john@gmail.com">
                        
                        <label for="Password">Password</label>
                        <input type="password" placeholder="At least 6 characters">
            
                        <label for="Password">Confirm Password</label>
                        <input type="password" placeholder="Enter password again">
            
                        <br>
                        <div class="alignCenter">
                            <p style="margin-bottom: 10px; ">Taste on wheels account allows you to give feedback to food trucks, also you can add and manage your foodtruck on TOW website using this account.</p>
                            <p>Already have an account ?, <a href="/login">Click here to login</a> </p>
                            <button id="submitButton" type="submit">Sign Up</button>
                        </div>
                    </form>
                </div>
            </section>


        </div>
        </div>
    </section>

    </body>

    </html>